name: Validate stadium coverage

on:
  pull_request:
  workflow_dispatch:

jobs:
  check-stadiums:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 20
      - run: node scripts/fill-stadiums.js --check --fail-on-missing
