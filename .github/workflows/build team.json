name: Build teams.json

on:
  workflow_dispatch:
  push:
    paths:
      - "logos1/vendor/**"
      - "data/league-map.json"
      - "data/colors.json"
      - "data/stadiums.json"
      - "scripts/generate-teams.mjs"
      - ".github/workflows/build-teams.yml"

permissions:
  contents: write

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20

      # Install deps only for this run, do not touch package.json or package-lock
      - name: Install palette deps (no-save)
        run: |
          npm install --no-save --no-audit --no-fund --no-package-lock \
            node-vibrant@3 sharp@0.33.4

      - name: Generate teams.json
        run: node scripts/generate-teams.mjs

      # Commit only if teams.json changed; ignore other untracked/modified files
      - name: Commit and push teams.json (if changed)
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"

          # Check if teams.json differs from HEAD; commit only that file
          if git diff --quiet -- teams.json; then
            echo "No changes to teams.json."
            exit 0
          fi

          git add teams.json
          git commit -m "chore: build teams.json"
          git push
