name: Fill stadiums into teams.json

on:
  workflow_dispatch:
  push:
    paths:
      - "data/stadiums.json"
      - "data/stadiums-extra.json"
      - "teams.json"
      - "scripts/fill-stadiums.js"
      - ".github/workflows/fill-stadiums.yml"

permissions:
  contents: write

jobs:
  fill-stadiums:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20

      - name: Fill stadium values into teams.json
        run: node scripts/fill-stadiums.js --write

      - name: Commit teams.json if updated
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"

          if git diff --quiet -- teams.json; then
            echo "No stadium updates in teams.json."
            exit 0
          fi

          git add teams.json
          git commit -m "chore: fill stadium values into teams.json"
          git push
